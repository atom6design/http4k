extends ./layout/_layout

block variables
    - var title = "Landing Page"

block content
    // header
    header.landing
        .overlay
        include components/_nav
        .container.h-80
            .row.align-items-center.h-100
                .col-md-7.col-lg-5.col-xl-4
                    h2.header.mb-4 The lightweight HTTP toolkit for Kotlin applications
                    p.mb-5 http4k provides a functional and consistent way to serve and consume HTTP services.
                    button.btn.btn-warning Quick Start
        img(src="images/pipes-hero.png" class="mt-5  img-fluid d-lg-none")

    // features
    .features
        .container
            h2 Understand our main features
            .row
                .col-md-6.col-lg-3
                    .card-custom
                        img(src="images/footprint.svg" alt="footprint")
                        h4 Small #[br] footprint
                        .dash.blue-color 
                        p The core library has no other dependencies and it’s enough to get started.

                .col-md-6.col-lg-3
                    .card-custom
                        img(src="images/extendable.svg" alt="extendable")
                        h4 Highly #[br] extendable
                        .dash.purple-color
                        p Template engines, rendering formats, operability and
                            |resilience features, testing tools… http4k provides 30+ integrations for
                            |developers to choose from

                .col-md-6.col-lg-3
                    .card-custom
                        img(src="images/testability.svg" alt="testability")
                        h4 Testability as a #[br] design principle
                        .dash.secondary-color 
                        p testing can be done in-memory without actual running servers or network communication. Various approaches such
                            |as Approval and Chaos testing are also supported.

                .col-md-6.col-lg-3
                    .card-custom
                        img(src="images/supportive.svg" alt="supportive")
                        h4 Supportive #[br] community
                        .dash.green-color 
                        p The core library has no other dependencies and it’s enough to get started.

